{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
