{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "koa", "koa-bodyparser"],
    "baseUrl": "./",
    "paths": {
      "@router": ["src/router"],
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@infra": ["src/infra"],
      "@infra/*": ["src/infra/*"],
      "@utils/*": ["src/utils/*"],
      "@module/*": ["src/modules/*"]
    }
  },
  "include": ["app.ts", "src"]
}
