{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "koa", "koa-bodyparser"],
    "baseUrl": "./",
    "paths": {
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@infra/*": ["src/infra/*"],
      "@utils/*": ["src/utils/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@rpc/*": ["src/rpc/*"]
    }
  },
  "include": ["app.ts", "src"]
}
